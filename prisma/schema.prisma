generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id
  walletAddress String     @unique
  coins         Int        @default(0)
  lastCheckIn   DateTime   @default(now())
  createdAt     DateTime   @default(now())
  fragments     Fragment[]
  cars          Car[]
}

model Fragment {
  id        Int      @id @default(autoincrement())
  userId    String
  typeId    Int      // 0=CHASSIS, 1=WHEELS, 2=ENGINE, 3=BODY, 4=INTERIOR
  brand     String   // Car brand (e.g., "Honda Civic", "BMW M3")
  series    String   // Car series (e.g., "Economy", "Sport")
  rarity    String   // common, rare, epic, legendary
  txHash    String?
  isUsed    Boolean  @default(false) // true if used for assembly
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, brand, isUsed]) // For efficient assembly queries
}

model Car {
  tokenId     Int      @id
  ownerId     String
  modelName   String?
  series      String?
  isRedeemed  Boolean  @default(false)
  mintTxHash  String?
  user        User     @relation(fields: [ownerId], references: [id])
}
