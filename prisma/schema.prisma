generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id
  walletAddress   String        @unique
  email           String?       // User email from Privy
  username        String?       // Username from Twitter/Discord/Email
  usernameSet     Boolean       @default(false) // Track if user manually set username (one-time only)
  coins           Int           @default(0)
  lastCheckIn     DateTime      @default(now())
  createdAt       DateTime      @default(now())

  // Shipping information for physical redemption
  shippingName    String?
  shippingPhone   String?
  shippingAddress String?

  fragments       Fragment[]
  cars            Car[]
  sellerListings  Listing[]     @relation("SellerListings")
  buyerPurchases  Listing[]     @relation("BuyerPurchases")
  waitingList     WaitingList[]
}

model Fragment {
  id        Int      @id @default(autoincrement())
  userId    String
  typeId    Int      // 0=CHASSIS, 1=WHEELS, 2=ENGINE, 3=BODY, 4=INTERIOR
  brand     String   // Car brand (e.g., "Honda Civic", "BMW M3")
  series    String   // Car series (e.g., "Economy", "Sport")
  rarity    String   // common, rare, epic, legendary
  txHash    String?
  isUsed    Boolean  @default(false) // true if used for assembly
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId, brand, isUsed]) // For efficient assembly queries
}

model Car {
  tokenId        Int       @id
  ownerId        String
  soldByUserId   String?   // Original seller when sold to admin
  modelName      String?
  series         String?
  isRedeemed     Boolean   @default(false)
  mintTxHash     String?
  createdAt      DateTime  @default(now())
  redeemedAt     DateTime?
  soldToAdminAt  DateTime?
  user           User      @relation(fields: [ownerId], references: [id])
  listing        Listing?

  @@index([createdAt])
  @@index([soldByUserId])
}

model Listing {
  id          Int       @id @default(autoincrement())
  carTokenId  Int       @unique
  sellerId    String
  price       Int
  status      String    @default("active")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  soldAt      DateTime?
  buyerId     String?
  txHash      String?

  seller      User      @relation("SellerListings", fields: [sellerId], references: [id])
  buyer       User?     @relation("BuyerPurchases", fields: [buyerId], references: [id])
  car         Car       @relation(fields: [carTokenId], references: [tokenId])

  @@index([status, createdAt])
  @@index([sellerId])
}

model WaitingList {
  id           Int      @id @default(autoincrement())
  userId       String
  series       String
  fragmentIds  String   // JSON array of fragment IDs
  status       String   @default("waiting") // "waiting", "notified", "expired", "claimed"
  position     Int      // Position in queue
  createdAt    DateTime @default(now())
  notifiedAt   DateTime?
  expiresAt    DateTime?

  user         User     @relation(fields: [userId], references: [id])

  @@index([series, status, position])
  @@index([userId, status])
}
