# Database Configuration
# For Vercel/Production: Use Neon PostgreSQL
# Get your connection string from: https://console.neon.tech
DATABASE_URL="postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require"

# Privy Authentication
# Get these from https://dashboard.privy.io
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here

# Blockchain Configuration (Base Sepolia Testnet)
RPC_URL=https://sepolia.base.org

# Backend wallet private key (for minting fragments)
# IMPORTANT: Keep this secret! Never commit to git!
BACKEND_PRIVATE_KEY=0x_your_private_key_here

# Smart Contract Addresses (Base Sepolia)
# MockIDRX Token (replaces database coins)
MOCKIDRX_CONTRACT_ADDRESS=0x_your_mockidrx_contract_address_here

# Fragment ERC1155 Contract (for daily check-in rewards)
FRAGMENT_CONTRACT_ADDRESS=0x_your_fragment_contract_address_here

# Car NFT ERC721 Contract (for gacha rewards)
CAR_CONTRACT_ADDRESS=0x_your_car_contract_address_here

# Vault/Staking Contract
VAULT_CONTRACT_ADDRESS=0x_your_vault_contract_address_here

# Gacha Contract
GACHA_CONTRACT_ADDRESS=0x_your_gacha_contract_address_here

# Treasury Wallet (receives MockIDRX payments)
TREASURY_WALLET=0x_your_treasury_wallet_address_here

# Server Configuration (optional for local dev)
PORT=3001
